{
  "name": "@proctorio/hulk",
  "version": "2.0.0",
  "description": "Lightweight minification library for HTML, CSS, SVG, JavaScript, and JSON",
  "keywords": [
    "minify",
    "minifier",
    "html",
    "css",
    "svg",
    "javascript",
    "json",
    "compression",
    "optimize",
    "optimizer",
    "proctorio",
    "zero-dependencies",
    "lightweight",
    "regex",
    "html-minifier",
    "css-minifier",
    "svg-minifier",
    "js-minifier",
    "json-minifier"
  ],
  "main": "./lib/index.js",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    }
  },
  "files": [
    "src",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/proctorio/hulk.js.git"
  },
  "bugs": {
    "url": "https://github.com/proctorio/hulk.js/issues"
  },
  "homepage": "https://github.com/proctorio/hulk.js#readme",
  "scripts": {
    "build": "node -e \"require('fs').cpSync('src', 'lib', {recursive: true})\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint --fix --ext .js src/ test/",
    "lint:check": "eslint --ext .js src/ test/",
    "prepublishOnly": "npm run build && npm test"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "Proctorio",
  "license": "Apache-2.0",
  "eslintConfig": {
    "extends": "@proctorio/eslint-config"
  },
  "devDependencies": {
    "@proctorio/eslint-config": "2.5.12",
    "eslint": "8.52.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0"
  }
}